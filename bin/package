#!/usr/bin/env bash
set -euxo pipefail

VERSION=${REF#"refs/tags/"}
DIST=`pwd`/dist
mkdir -p $DIST

echo "Packaging for $TARGET..."

RUSTFLAGS="--deny warnings $TARGET_RUSTFLAGS" \
  cargo build --bin tcping --target $TARGET --release

cp target/$TARGET/release/tcping $DIST/

cd $DIST
ARCHIVE="tcping-$VERSION-$TARGET.tar.gz"
tar czf $ARCHIVE *

# Create a new environment file
echo "ARCHIVE=$ARCHIVE" >> archive.env

# Write the path of the environment file to GITHUB_ENV
echo "archive.env" >> $GITHUB_ENV